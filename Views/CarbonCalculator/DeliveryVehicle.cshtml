</form>
 
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Move emissionFactors to the top to ensure it's defined before it's used
    const emissionFactors = {
        cementProduction: 0.500,
        steelManufacturing: 1.20,
        nitricAcidProduction: 0.0085,
        ammoniaProduction: 1.600,
        limeProduction: 0.800,
        glassManufacturing: 0.210,
        aluminumProduction: 1.70,
        sodaAshProduction: 0.14,
        adipicAcidProduction: 0.30
    };

    $(document).ready(function () {
        // Handle checkbox change event
        $('.gas-checkbox').on('change', function () {
            const fieldId = $(this).data('field');
            if (this.checked) {
                $('#' + fieldId).slideDown();
            } else {
                $('#' + fieldId).slideUp();
            }
        });
    });

    // Function to calculate emissions for each process separately
    function calculateTotalEmissions() {
        // Get user input for all processes
        const cementProduction = parseFloat(document.getElementById('cementProduction').value) || 0;
        const steelManufacturing = parseFloat(document.getElementById('steelManufacturing').value) || 0;
        const nitricAcidProduction = parseFloat(document.getElementById('nitricAcidProduction').value) || 0;
        const ammoniaProduction = parseFloat(document.getElementById('ammoniaProduction').value) || 0;
        const limeProduction = parseFloat(document.getElementById('limeProduction').value) || 0;
        const glassManufacturing = parseFloat(document.getElementById('glassManufacturing').value) || 0;
        const aluminumProduction = parseFloat(document.getElementById('aluminumProduction').value) || 0;
        const sodaAshProduction = parseFloat(document.getElementById('sodaAshProduction').value) || 0;
        const adipicAcidProduction = parseFloat(document.getElementById('adipicAcidProduction').value) || 0;

        // Calculate emissions for each process
        const cementEmissions = (cementProduction * emissionFactors.cementProduction).toFixed(4);
        const steelEmissions = (steelManufacturing * emissionFactors.steelManufacturing).toFixed(4);
        const nitricAcidEmissions = (nitricAcidProduction * emissionFactors.nitricAcidProduction).toFixed(4);
        const ammoniaEmissions = (ammoniaProduction * emissionFactors.ammoniaProduction).toFixed(4);
        const limeEmissions = (limeProduction * emissionFactors.limeProduction).toFixed(4);
        const glassEmissions = (glassManufacturing * emissionFactors.glassManufacturing).toFixed(4);
        const aluminumEmissions = (aluminumProduction * emissionFactors.aluminumProduction).toFixed(4);
        const sodaAshEmissions = (sodaAshProduction * emissionFactors.sodaAshProduction).toFixed(4);
        const adipicAcidEmissions = (adipicAcidProduction * emissionFactors.adipicAcidProduction).toFixed(4);

        // Log emissions to console
        console.log("Cement Emissions", cementEmissions);
        console.log("Steel Emissions", steelEmissions);
        console.log("Nitric Acid Emissions", nitricAcidEmissions);
        console.log("Ammonia Emissions", ammoniaEmissions);
        console.log("Lime Emissions", limeEmissions);
        console.log("Glass Emissions", glassEmissions);
        console.log("Aluminum Emissions", aluminumEmissions);
        console.log("Soda Ash Emissions", sodaAshEmissions);
        console.log("Adipic Acid Emissions", adipicAcidEmissions);

        // Store emissions in sessionStorage
        sessionStorage.setItem("ProcessEmission", cementEmissions + "," + steelEmissions + "," + nitricAcidEmissions +
            "," + ammoniaEmissions + "," + limeEmissions + "," + glassEmissions + "," + aluminumEmissions + "," +
            sodaAshEmissions + "," + adipicAcidEmissions);
    }

    function handleFormSubmit() {
        // Perform emissions calculations
        calculateTotalEmissions();

        // Submit the form after the calculations
        document.querySelector('form').submit();
    }

</script>
