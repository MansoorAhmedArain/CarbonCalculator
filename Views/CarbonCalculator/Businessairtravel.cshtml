@model WTechAuth.Models.CarbonCalculatorViewModel

@{
    ViewData["Title"] = "Business Air Travel";
}

<h2>
    Step 8: Business air travel (Scope-3)
</h2>
<h3 style="color:red; font-size: 14px;">
    Enter the average monthly data for company related air travel. It includes flights taken for company meetings, business tours.
</h3>

<!-- Form Starts Here -->
<form method="post" asp-action="Transportationofgoods">

    <!-- Transportation Method Section -->
    <div class="row mb-3">
        <label class="form-label">
            Select flight classes for business travel:
        </label>
        <div class="row mb-3 text-center">
            <!-- Domestic Button -->
            <div class="col-6">
                <button type="button" class="btn btn-outline-dark fuel-type-btn w-100" id="domesticBtn">Domestic</button>
            </div>
            <div class="col-6">
                <button type="button" class="btn btn-outline-dark fuel-type-btn w-100" id="economyBtn">Economy</button>
            </div>
         </div>
        <div class="row mb-3 text-center">
          <!-- Premium Economy Button -->
            <div class="col-6">
                <button type="button" class="btn btn-outline-dark fuel-type-btn w-100" id="premiumEconomyBtn">Premium Economy</button>
            </div>
            <!-- Business Button -->
            <div class="col-6">
                <button type="button" class="btn btn-outline-dark fuel-type-btn w-100" id="businessBtn">Business</button>
            </div>
            </div>
        <div class="row mb-3 text-center">

            <!-- First Class Button -->
            <div class="col-6">
                <button type="button" class="btn btn-outline-dark fuel-type-btn w-100" id="firstClassBtn">First Class</button>
            </div>
        </div>
    </div>
        <!-- Unit Selector -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="mb-3">
                    <label for="preferredUnit" class="form-label">Preferred Unit</label>
                    <select class="form-select" id="officeUnit" name="distanceUnit">
                        <option value="km" selected>km</option>
                        <option value="miles">miles</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Hidden input fields for each transportation method -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="mb-3" id="domesticDistance" style="display:none;">
                    <label for="domesticInput" class="form-label">Distance travelled in Domestic flights</label>
                    <input type="text" class="form-control" id="domesticInput" name="domesticDistance" placeholder="Enter distance">
                </div>
                <div class="mb-3" id="economyDistance" style="display:none;">
                    <label for="economyInput" class="form-label">Distance travelled in Economy flights</label>
                    <input type="text" class="form-control" id="economyInput" name="economyDistance" placeholder="Enter distance">
                </div>
                <div class="mb-3" id="premiumEconomyDistance" style="display:none;">
                    <label for="premiumEconomyInput" class="form-label">Distance travelled in Premium Economy flights</label>
                    <input type="text" class="form-control" id="premiumEconomyInput" name="premiumEconomyDistance" placeholder="Enter distance">
                </div>
                <div class="mb-3" id="businessDistance" style="display:none;">
                    <label for="businessInput" class="form-label">Distance travelled in Business flights</label>
                    <input type="text" class="form-control" id="businessInput" name="businessDistance" placeholder="Enter distance">
                </div>
                <div class="mb-3" id="firstClassDistance" style="display:none;">
                    <label for="firstClassInput" class="form-label">Distance travelled in First Class flights</label>
                    <input type="text" class="form-control" id="firstClassInput" name="firstClassDistance" placeholder="Enter distance">
                </div>
            </div>
        </div>

    </div>

    <!-- Navigation Buttons -->
    <div class="d-flex justify-content-center">
        <button type="button" class="btn simple-btn mx-3" onclick="window.location.href='@Url.Action("Transportation", "CarbonCalculator")'">Previous</button>
        <button class="btn simple-btn mx-3">Next</button>
    </div>
</form>

<!-- Script to handle button selection and input field visibility -->
<script>
    // Function to toggle visibility of the input fields
    function toggleField(buttonId, fieldId) {
        let button = document.getElementById(buttonId);
        let field = document.getElementById(fieldId);

        button.classList.toggle('btn-outline-dark');
        button.classList.toggle('btn-dark'); // Change button style on selection

        // Toggle the visibility of the input field
        if (field.style.display === "none") {
            field.style.display = "block";
        } else {
            field.style.display = "none";
        }
    }

    // Attach event listeners to buttons
    document.getElementById('domesticBtn').addEventListener('click', function () {
        toggleField('domesticBtn', 'domesticDistance');
    });

    document.getElementById('economyBtn').addEventListener('click', function () {
        toggleField('economyBtn', 'economyDistance');
    });

    document.getElementById('premiumEconomyBtn').addEventListener('click', function () {
        toggleField('premiumEconomyBtn', 'premiumEconomyDistance');
    });

    document.getElementById('businessBtn').addEventListener('click', function () {
        toggleField('businessBtn', 'businessDistance');
    });

    document.getElementById('firstClassBtn').addEventListener('click', function () {
        toggleField('firstClassBtn', 'firstClassDistance');
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
